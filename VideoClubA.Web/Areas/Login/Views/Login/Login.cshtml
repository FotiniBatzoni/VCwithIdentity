@using VideoClubA.Web.Areas.Login.Models;
@model VideoClubA.Web.Areas.Login.Models.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <h3>User Login</h3>
</p>
<div class="container border" style="padding:20px">
    <form method="post" action="PostLogin">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row m-5">
            <div class="col-2">
                <label  style="color:white" >User Name</label>
            </div>
            <div class="col-5">
                <input type="text" name="UserName" value="@Model.UserName" class="form-control"/>
                    <span class="text-danger" asp-validation-for="LoginViewModel.UserName"></span>
            </div>
        </div >
          <div class="form-group row m-5" >
            <div class="col-2">
                <label style="color:white" >Password</label>
            </div>
            <div class="col-5">
                <input type="password" name="Password" value="@Model.Password" class="form-control" />
            <span class="text-danger" asp-validation-for="LoginViewModel.Password"></span>

            </div>

        </div >
@*        <div class="row form-check mb-2">
           <div class="col-2">
                <input type="checkbox" name="RememberMe" value="@Model.RememberMe" class="form-check-input">
                <label class="col-form-label" asp-validation-for="LoginViewModel.RememberMe" >Remember Me</label>
            </div>
         </div>*@

         <div class="form-group row m-5" >
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login">
            </div>
            <div class="col">
                <a class="btn btn-link" href="/Register/Register/Register">Sign Up</a>
            </div>
        </div >
    </form>
</div>