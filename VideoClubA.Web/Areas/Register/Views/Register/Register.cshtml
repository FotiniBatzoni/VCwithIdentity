@using VideoClubA.Web.Areas.Register.Models;
@model VideoClubA.Web.Areas.Register.Models.RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <h3>User Registration</h3>
</p>

<div class="container border" style="padding:20px">
    <form method="post" action="PostRegister">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row m-5">
            <div class="col-2">
                <label style="color:white" >Email</label>
            </div>
            <div class="col-5">
                <input type="text"  name="Email" value="@Model.Email" class="form-control"/>
                    <span class="text-danger" asp-validation-for="RegisterViewModel.Email"></span>
            </div>
        </div >
       <div class="form-group row m-5" >
            <div class="col-2">
                <label style="color:white" asp-for="RegisterViewModel.Password">Password</label>
            </div>
            <div class="col-5">
                <input type="password"  name="Password" value="@Model.Password" class="form-control" />
                <span class="text-danger" asp-validation-for="RegisterViewModel.Password"></span>

            </div>
        </div>
        <div class="form-group row m-5" >
            <div class="col-2">
                <label style="color:white" asp-for="RegisterViewModel.FirstName">FirstName</label>
            </div>
            <div class="col-5">
                <input type="text"   name="FirstName" value="@Model.FirstName" class="form-control" />
                <span class="text-danger" asp-validation-for="RegisterViewModel.FirstName"></span>
            </div>
        </div>

        <div class="form-group row m-5" >
            <div class="col-2">
                <label style="color:white" asp-for="RegisterViewModel.LastName">LastName</label>
            </div>
            <div class="col-5">
                <input type="text"  name="LastName" value="@Model.LastName" class="form-control" />
                <span class="text-danger" asp-validation-for="RegisterViewModel.LastName"></span>
            </div>
        </div>
  

        <div class="form-group row m-5" >
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Register">
            </div>
       
        </div >
    </form>
</div>
